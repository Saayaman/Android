<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp"
    tools:context=".MainActivity"
    android:background="@drawable/background_gradient">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="166dp">

        <com.ayako_sayama.calculator.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="@dimen/answerText"
            android:textStyle="normal|bold"
            android:gravity="bottom|right"
            android:padding="10sp"
            android:textColor="@color/buttonTextColor"
            android:layout_weight="1" />

        <com.ayako_sayama.calculator.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/calculation"
            android:gravity="bottom"
            android:padding="6sp"
            android:textSize="20sp"
            android:textColor="@color/buttonTextColor"
            android:background="@color/calculationBG"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button1"
                android:layout_weight="1"
                android:onClick="doNumber"
                tools:padding="0dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:onClick="doNumber"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>


            <com.ayako_sayama.calculator.CustomButtonView
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:onClick="doNumber"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonPlus"
                android:layout_weight="1"
                android:onClick="doOperator"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                android:onClick="doNumber"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:onClick="doNumber"
            android:textSize="@dimen/text_size"
            android:textColor="@color/buttonTextColor"
            android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:onClick="doNumber"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonMinus"
                android:layout_weight="1"
                android:onClick="doOperator"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:onClick="doNumber"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:onClick="doNumber"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:onClick="doNumber"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="*"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonTimes"
                android:layout_weight="1"
                android:onClick="doOperator"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button0"
                android:layout_weight="1.5"
                android:onClick="doNumber"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="."
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonDot"
                android:onClick="doNumber"
                android:layout_weight="1.5"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="/"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonDivide"
                android:onClick="doOperator"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="C"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonC"
                android:layout_weight="10"
                android:onClick="doClear"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style"/>

            <com.ayako_sayama.calculator.CustomButtonView
                android:text="="
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonEqual"
                android:layout_weight="10"
                android:onClick="doEqual"
                android:textSize="@dimen/text_size"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/button_style" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>